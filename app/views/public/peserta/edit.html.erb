</div>
<div class="form-group">
  <label for="">Bahasa Sehari hari</label>
  <%= f.text_field :peserta_bahasa_seharihari, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Kebutuhan Khusus</label>
  <%= f.text_field :peserta_kategori, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Jenjang Pendidikan</label>
  <%= f.text_field :peserta_jenjang_pendidikan, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Photo</label>
  <%= f.file_field :peserta_photo, {class: 'form-control'} %>
</div>
<div class="form-group">
  <input type="submit" value="Perbarui Data" class="btn btn-primary">
</div>
<% end %>
