<%= form_for(@data, url: url_for(action: 'edit_post', peserta_id: @data.id), multipart: true ) do |f| %>
<div class="form-group">
  <label for="">Nama Lengkap</label>
  <%= f.text_field :peserta_nama, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Tanggal Lahir</label>
  <%= f.text_field :peserta_tanggal_lahir, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Tempat Lahir</label>
  <%= f.text_field :peserta_tempat_lahir, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">NIK</label>
  <%= f.text_field :peserta_nik, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Jenis Kelamin</label>
  <%= f.text_field :peserta_jk, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Nama Ayah</label>
  <%= f.text_field :peserta_nama_ayah, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Nama Ibu</label>
  <%= f.text_field :peserta_nama_ibu, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">No Hp</label>
  <%= f.text_field :peserta_telepon, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Alamat</label>
  <%= f.text_field :peserta_alamat, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Tinggi Badan</label>
  <%= f.text_field :peserta_tinggi, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Berat Badan</label>
  <%= f.text_field :peserta_bb, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Golongan Darah</label>
  <%= f.text_field :peserta_gol_darah, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Jarak Rumah ke Sekolah</label>
